@using FirstEntityFrameworkCore.DAC.Entities;

@model Teacher

@{
    ViewData["Title"] = "Dersler";
}


<div class="d-flex  flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"></h1>

    <div class="btn-toolbar mb-2 mb-md-0">

        <form asp-controller="SelectLesson" asp-action="addInstructorLesson" method="get">
            @Html.Hidden("id", Model.id)

            <button type="submit" class="btn btn-outline-dark ml-1">
                <span class="mt-1">Ders Ekle</span>
                <svg width="1em" height="1em" viewBox="0 0 16 18" class="bi bi-plus-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg>
            </button>
        </form>
    </div>
</div>

<b>@Model.name @Model.surname  Adına Kayıtlı Dersler </b>

<div class="table-responsive mt-1">
    <table class="table  col-sm-12">

        <thead>
            <tr>
                <th>#</th>
                <th>Ders Adı</th>
                <th>Oluşturulma Tarihi</th>
                <th>Düzenlenme Tarihi</th>
                <th>Düzenle</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>

            @if (Model.lessons.Count != 0)
            {
                int count = 1;

                @foreach (Lessons item in Model.lessons)
                {
                    <form asp-controller="" asp-action="" method="post">
                        <tr>
                            <td>@(count++)</td>
                            <td>@item.name</td>
                            <td>@item.CreatedOn.ToString("dd/MM/yyyy")</td>
                            <td>@item.ModifiedOn.ToString("dd/MM/yyyy")</td>

                            @Html.Hidden("model", item)
                            <td><button type="submit" class="btn btn-outline-dark btn-sm">Düzenle</button></td>
                            <td><button type="submit" class="btn btn-outline-dark btn-sm">Detay</button></td>
                        </tr>
                    </form>
                }
            }
            else
            {
                <tr>
                    <td>Eğitmene Ait Gösterilecek Herhangi Bir Ders Kaydı Yok!</td>
                </tr>

            }



        </tbody>
    </table>
</div>

