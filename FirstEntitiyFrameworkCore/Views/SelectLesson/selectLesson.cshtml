@using FirstEntityFrameworkCore.DAC.Entities
@model List<Teacher>



<div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"></h1>

    <div class="btn-toolbar mb-2 mb-md-0">
        <h5>Kayıtlı Eğitmenler</h5>
    </div>
</div>


<div class="table-responsive">
    <table class="table  col-sm-12">

        <thead>
            <tr>
                <th>#</th>
                <th>Eğitmen Adı</th>
                <th>Eğitmen Soyadı</th>
                <th>Oluşturulma Tarihi</th>
                <th>Düzenlenme Tarihi</th>
                <th>Ders Seçimi</th>
            </tr>
        </thead>
        <tbody>

            @if (Model.Count != 0)
            {
                int count = 1;

                @foreach (Teacher item in Model)
                {
                    <form asp-controller="SelectLesson" asp-action="RegisteredLesson" method="post">
                        <tr>
                            <td>@(count++)</td>
                            <td>@item.name</td>
                            <td>@item.surname</td>
                            <td>@item.CreatedOn.ToString("dd/MM/yyyy")</td>
                            <td>@item.ModifiedOn.ToString("dd/MM/yyyy")</td>

                            @Html.Hidden("id", item.id)
                            <td><button type="submit" class="btn btn-outline-dark btn-sm">Dersler</button></td>
                        </tr>
                    </form>
                }
            }
            else
            {
                <tr>
                    <td>Gösterilecek Herhangi Bir Eğitmen Yok.</td>
                </tr>

            }



        </tbody>
    </table>
</div>


